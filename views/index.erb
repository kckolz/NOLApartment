<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
    <%= css :application %>
    <script type="text/javascript"
      src="http://maps.googleapis.com/maps/api/js?key=AIzaSyAvIL2g56oknkfO5zsVPL5JZQvebfvl7tI&sensor=false">
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.21/jquery-ui.min.js"></script>
    <%= js :app %>
    <%= js :apartment %>
    <%= js :handlebars %>
    <script id="apartment-template" type="text/x-handlebars-template" >
      <a href="{{url}}" target="_blank">{{title}}</a>
      <div>
        {{#if price}}
        <span class="dollars">${{price}}</span>
        {{/if}}
        <span class="beds">{{beds}}</span><span>beds</span>
      </div>
      <div>
       Posted {{daysSincePosted}} days ago. ({{published}})
      </div>
    </script>
  </head>
  <body>
    <div id="filters">
      <fieldset>
        <legend>Price: <span id='price-range'></span></legend>
        <div id='price-slider'></div>
      </fieldset>

      <fieldset>
        <legend>Beds: <span id='beds-range'></span></legend>
        <div id='beds-slider'></div>
      </fieldset>

      <fieldset>
        <legend>Posted in the last: <span id='days'></span></legend>
        <div id='days-slider'></div>
      </fieldset>

      <div class="hidden">
        <input id="min-price-input" />
        <input id="max-price-input" />
        <input id="min-beds-input" />
        <input id="max-beds-input" />
        <input id="days-input" />
      </div>
      
    </div>
    <div id="map_canvas"></div>
  </body>
</html>
